# ============================================
# Application
# ============================================
NODE_ENV=development
APP_NAME="NestJS Admin"
PORT=3001
API_PREFIX=api
DEBUG=false

# ============================================
# Database (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=cex_admin
DB_SYNCHRONIZE=true
DB_LOGGING=true
DB_SSL=false
DB_MAX_CONNECTIONS=100
DB_CONNECTION_TIMEOUT=30000

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=admin:
REDIS_TTL=3600

# ============================================
# Kafka
# ============================================
KAFKA_ENABLED=false
KAFKA_CLIENT_ID=nest-admin
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=nest-admin-group
KAFKA_SSL=false
# KAFKA_SASL_MECHANISM=plain
# KAFKA_SASL_USERNAME=
# KAFKA_SASL_PASSWORD=

# ============================================
# Mail
# ============================================
MAIL_ENABLED=false
MAIL_TRANSPORT=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME="NestJS Admin"

# ============================================
# SMS
# ============================================
SMS_ENABLED=false
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=
SMS_AUTH_TOKEN=
SMS_FROM=

# ============================================
# Security - JWT (REQUIRED: min 32 chars)
# ============================================
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# Security - Hashing
# ============================================
BCRYPT_SALT_ROUNDS=12

# ============================================
# Security - Rate Limiting
# ============================================
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# ============================================
# Security - TOTP
# ============================================
TOTP_ISSUER="NestJS Admin"

# ============================================
# CORS
# ============================================
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Accept,Authorization,X-Requested-With
CORS_EXPOSED_HEADERS=
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600
